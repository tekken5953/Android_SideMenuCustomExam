<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/user_state"
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/image" />

                <ImageView
                    android:id="@+id/user_icon_ring"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="180dp"
                    android:src="@drawable/user" />

                <ImageButton
                    android:id="@+id/edit_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/button_background"
                    android:drawableTint="@color/title_color"
                    android:src="@drawable/edit_user_info"
                    android:tint="@color/title_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User 님"
                    android:textSize="25sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@color/black"/>

            </FrameLayout>


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/user_state"
                android:layout_marginTop="30dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="아이디"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:typeface="serif"
                android:id="@+id/user_id_tx"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User_ID_Info"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:layout_alignParentRight="true"
                android:id="@+id/user_id_info"/>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/user_id_tx"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="이메일"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:typeface="serif"
                android:id="@+id/user_email_tx"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User_E-Mail_Info"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/view2"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:layout_alignParentRight="true"
                android:id="@+id/user_email_info"/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/user_email_tx"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="식별코드"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:typeface="serif"
                android:id="@+id/user_sign_tx"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User_SIGN_Info"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/view3"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:layout_alignParentRight="true"
                android:id="@+id/user_sign_info"/>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/user_sign_tx"
                android:layout_marginTop="20dp"
                android:background="@color/black" />
            </RelativeLayout>
        </ScrollView>

</RelativeLayout>
