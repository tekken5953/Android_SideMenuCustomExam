<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bbb"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:backgroundTint="@android:color/black"
            android:background="@drawable/clear" />

        <ImageView
            android:id="@+id/option_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btn_cancel"
            android:tint="@android:color/black"
            android:src="@drawable/optioin_img" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="#202735" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ccc"
        android:layout_below="@+id/bbb">

        <RelativeLayout
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/image" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="80dp"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/user" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="#202735" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/aaa"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/btn_side_level_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="1번 액티비티"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/add_img1"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/plus" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/child_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/child1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="1번 액티비티 하위 메뉴1"
                        android:textColor="#202735"/>

                    <View
                        android:id="@+id/childline1_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/child1"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/darker_gray"
                        android:scaleX="0.9" />

                    <TextView
                        android:id="@+id/child1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childline1_1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="1번 액티비티 하위 메뉴2"
                        android:textColor="#202735"/>

                    <View
                        android:id="@+id/childline1_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/child1_2"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/darker_gray"
                        android:scaleX="0.9" />

                    <TextView
                        android:id="@+id/child1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childline1_2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="1번 액티비티 하위 메뉴3"
                        android:textColor="#202735"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/first_activity_child"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_alignParentBottom="true"
                    android:background="#202735" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/btn_side_level_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="2번 액티비티"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/add_img2"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/plus" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/child_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/child2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="2번 액티비티 하위 메뉴1"
                        android:textColor="#202735"/>

                    <View
                        android:id="@+id/childline2_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/child2_1"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/darker_gray"
                        android:scaleX="0.9" />

                    <TextView
                        android:id="@+id/child2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childline2_1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="2번 액티비티 하위 메뉴2"
                        android:textColor="#202735"/>

                    <View
                        android:id="@+id/childline2_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/child2_2"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/darker_gray"
                        android:scaleX="0.9" />

                    <TextView
                        android:id="@+id/child2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childline2_2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="2번 액티비티 하위 메뉴3"
                        android:textColor="#202735"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_alignParentBottom="true"
                    android:background="#202735" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/btn_side_level_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="3번 액티비티"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/add_img3"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/plus" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/child_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/child3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="3번 액티비티 하위 메뉴1"
                        android:textColor="#202735"/>

                    <View
                        android:id="@+id/childline3_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/child3_1"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/darker_gray"
                        android:scaleX="0.9" />

                    <TextView
                        android:id="@+id/child3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childline3_1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="3번 액티비티 하위 메뉴2"
                        android:textColor="#202735"/>

                    <View
                        android:id="@+id/childline3_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/child3_2"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/darker_gray"
                        android:scaleX="0.9" />

                    <TextView
                        android:id="@+id/child3_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childline3_2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="3번 액티비티 하위 메뉴3"
                        android:textColor="#202735"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_alignParentBottom="true"
                    android:background="#202735" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/share"
            android:tint="@android:color/black"/>
    </RelativeLayout>
</RelativeLayout>