<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 수정"
        android:textColor="@color/title_color"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:id="@+id/btn_side_level_1"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="닉네임"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_name"
            android:lines="1"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/add_img1"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:tint="@color/title_color"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/edit_user_info"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/first_activity_child"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/btn_side_level_2"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="아이디"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_id"
            android:lines="1"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/add_img2"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/title_color"
            android:layout_marginRight="35dp"
            android:src="@drawable/edit_user_info" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/btn_side_level_3"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="이메일"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_email"
            android:lines="1"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/add_img3"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/title_color"
            android:layout_marginRight="35dp"
            android:src="@drawable/edit_user_info" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/btn_side_level_4"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="프로필 사진"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/add_img4"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerInParent="true"
            android:tint="@color/title_color"
            android:src="@drawable/edit_user_info" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/btn_side_level_5"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="배경 사진"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/add_img5"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerInParent="true"
            android:tint="@color/title_color"
            android:src="@drawable/edit_user_info" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line" />

</LinearLayout>
