<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="회원가입"
        android:layout_centerHorizontal="true"
        android:textColor="@color/title_color"
        android:textSize="30sp"
        android:id="@+id/main_text"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 : "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/sign_up_id_tx"
        android:layout_below="@id/main_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_text"
        android:backgroundTint="@color/black"
        android:id="@+id/sign_up_id"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/sign_up_id_tx"
        android:layout_marginTop="30dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디는 추후 변경이 불가능합니다. 신중히 결정해주세요."
        android:layout_below="@+id/sign_up_id_tx"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/warning_msg"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 : "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/sign_up_pwd_tx"
        android:layout_below="@id/warning_msg"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warning_msg"
        android:backgroundTint="@color/black"
        android:id="@+id/sign_up_pwd"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toRightOf="@id/sign_up_pwd_tx"
        android:layout_marginTop="20dp"
        android:inputType="numberPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일(선택) : "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/sign_up_email_tx"
        android:layout_below="@id/sign_up_pwd"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_pwd"
        android:backgroundTint="@color/black"
        android:id="@+id/sign_up_email"
        android:textSize="15sp"
        android:gravity="center"
        android:hint="asd1234@naver.com"
        android:layout_toRightOf="@+id/sign_up_email_tx"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sign_up_email"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="가입하기"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/sign_up_ok"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="취소"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/sign_up_cancel"/>
    </LinearLayout>



</RelativeLayout>
